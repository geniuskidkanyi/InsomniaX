<%= form_for @forum_thread do |f| %>
  <%= render "shared/error_messages", object: @forum_thread %>
  <%= f.text_field :subject, class: "form-control" %>
  <%= f.fields_for :forum_posts do |p| %>
      <%= p.text_area :body, placeholder: 'add a comment', rows: '10' %>
  <% end %>
<%= f.submit %>
<% end %>
