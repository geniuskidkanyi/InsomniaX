<div class="col s12 m10 l9 offset-m1 offset-l2 card news-feed">
  <%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<div class="input-field col s12">
    <%= f.text_area :content, class: 'materialize-textarea', id: "textarea1" %>
          <label for="textarea1">What do you need right now? Ask the communiy</label>
  </div>
  <div class="file-field input-field col s12">
  <div class="btn light-blue accent-4">
  <span>File</span>
  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </div>
  <div class="file-path-wrapper">
  <input class="file-path validate" type="text" placeholder="Upload picture along">
  </div>
  </div>



<%= f.submit "Post now",class: "btn light-blue accent-4 right",  autocomplete: "off", disabled: false %>

</div>


    <% end %>
<script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>
