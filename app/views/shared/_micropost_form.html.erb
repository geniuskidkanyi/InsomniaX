<div class="col s12 m10 l9 offset-m2 offset-l3 card news-feed">
  <%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<div class="input-field col s12">
    <%= f.text_area :content, class: 'materialize-textarea', length: '500', id: "textarea1" %>
          <label for="textarea1">What do you need right now? Ask the communiy</label>
        </div>
  <div class="option">

  <div class="file-field input-field">
  <div class="btn light-blue accent-4">
  <span>File</span>
  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </div>
  <div class="file-path-wrapper">
  <input class="file-path validate" type="text" placeholder="Upload picture along">
  </div>
  </div>

  </div>

</div>
<%= f.submit "Post", class: "waves-effect waves-light btn light-blue accent-4 right" %>

    <% end %>
<script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 10) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>
