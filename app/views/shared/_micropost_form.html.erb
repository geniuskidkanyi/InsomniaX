<div class="row">
    <div class="col-lg-offset-2 col-lg-2 col-sm-2 col-xs-12"><span><%= link_to gravatar_for(current_user, size: 50), current_user %></span></div>
    <div class="col-lg-6 col-sm-6 col-xs-12">

        <div class="well well-sm well-social-post">

            <%= form_for(@micropost, html: { multipart: true }) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
                   <ul class="list-inline" id='list_PostActions'>
                    <li class='active'><a href='#'>Update status</a></li>

                       <li><%= link_to "view my profile", current_user %></li>
                       <li><span><%= pluralize(current_user.microposts.count, "micropost") %></span></li>
                </ul>

                <%= f.text_area :content, placeholder: "Compose new micropost...", class: 'form-control' %>
                <ul class='list-inline post-actions'>
                    <li><a href="#"><span class="glyphicon glyphicon-camera"></span></a></li>

                    <li><a href="#" class='glyphicon glyphicon-map-marker'></a></li>
                    <li class='pull-right'><%= f.submit "Post", class: "btn btn-primary btn-xs" %></li>
                </ul>

        </div>
    <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
        <% end %>
    </span>
    </div>
</div>






<script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>
