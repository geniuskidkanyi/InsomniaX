

  <%= div_for forum_post do %>
<div class="card forum">
<div class="forum-pic">
  <%= gravatar_forum(forum_post.user, size: 54)  %>
</div>
<div class="forum-message">
  <div class="forum-detail">
    <%= forum_post.user.name %> commented on <%= local_time_ago forum_post.created_at %>
  </div>
<%= markdownify forum_post.body %>
</div>



</div>


<% end %>
