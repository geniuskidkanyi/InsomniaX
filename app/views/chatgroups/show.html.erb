<p id="notice"><%= notice %></p>

<script type="text/javascript">

$(document).ready(function () {
    $('.content').animate({
        scrollTop: $('.content .message-container:last-child').position().top
    }, 'slow');
});
</script>

 <div class="main_chat">
 <div class="main_chat_title"> <%= @chatgroup.name %> <span>  <%= link_to edit_chatgroup_path(@chatgroup) do %><i class="material-icons">edit</i> <% end %>
 </span> <span><%= link_to chatgroups_path do %> <i class="material-icons">reply_all</i><% end %></span></%> <span><i class="material-icons">delete_sweep</i></span></div>
   <div class="main_chat_users">
   <div class="input-field main_chat_search">
           <input id="search" type="search" required>
           <label for="search"><i class="material-icons">search</i></label>
           <i class="material-icons">close</i>
         </div>
     <ul class="collection">
       <% @chatgroup.users.each do |user| %>
       <li class="collection-item avatar">
         <%= gravatar_forum(user)  %>

         <span class="title"><%= user.name %></span>
         <p>   <%= user.username %>
         </p>

       </li>

       <% end %>



   </ul>
   </div>
   <div class="main_chat_messages">
     <div class="content" data-behavior="messages" data-chatgroup-id="<%= @chatgroup.id %>" id="content">
     <% @chatgroup.messages.order(created_at: :desc).limit(100).reverse.each do |message| %>
     <%= render message %>
     <% end %>
     </div>
     <div class="editor ">
       <%= form_for [@chatgroup, Message.new] do |f| %>
       <%= f.text_field :body, autofocus: :true, class: "main_chat_form" %>
     <button class="btn btn-icon btn-big right">send</button>
<% end %>
   </div>
     </div>


 </div>
