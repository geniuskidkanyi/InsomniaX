<!DOCTYPE html>
<html>
  <head>

    <title><%= yield(:title) %>| Insomniax the social community for geeks</title>
     <%= favicon_link_tag 'favicon.ico' %>
    <meta name="msvalidate.01" content="9BF9701D09E8E5A4D09FA989AE2C5617"/>
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900&subset=latin-ext" rel="stylesheet">

<link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= display_meta_tags %>
      <meta/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content='<%=  user_signed_in? ? current_user.name : "" %>' name='user-id'/>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= javascript_include_tag :modernizr %>
      <%= javascript_include_tag 'application'%>
    <%= csrf_meta_tags %>


    <%= render 'layouts/google' %>

  </head>
  <body>
    <%= render 'layouts/navbar' %>

    <!--main content-->

    <% if user_signed_in? %>
    <main>
      <div class="row main">

        <div class="col s12 m8 l8">

          <div id="main">
<%= flash_messages %>
            <%= yield %>
          </div>
        </div>
        <div class="col hide-on-small-only m4 l4 fixed">
<%= render 'shared/sidebar' %>
        </div>

      </div>
    </main>

  <% else %>

    <main class="main">
    <%= flash_messages %>
      <%= render 'layouts/login_modal' %>
      <%= yield %>

    </main>

    <%= render 'layouts/footer' %>
    <% end %>

  </body>
</html>
