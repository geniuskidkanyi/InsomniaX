<% else %>
<ul id="dropdown5" class="dropdown-content">


  <div class="row">
   <div class="col s12">
    Login

    <%= form_for(:session, url: main_app.login_path, class: 'form', id: 'login-nav') do |f| %>
    <div class="form-group">
     <%= f.label :email, class: 'sr-only' %>
     <%= f.email_field :email, placeholder: 'Email address', class:'form-control' %>
    </div>
    <div class="form-group">
     <%= f.label :password, class: 'sr-only'  %>

     <%= f.password_field :password, placeholder: 'Enter Password', class: 'form-control' %>

     <div class="help-block text-right"><%= link_to "(forgot password)", main_app.new_password_reset_path %></div>
    </div>
    <div class="checkbox">
     <%= f.label :remember_me, class: "checkbox inline" do %>
     <%= f.check_box :remember_me %>
     <span>Remember me on this computer</span>
    </div>
    <% end %>
    <%= f.submit 'signin', class:'btn btn-primary btn-block' %>

    <% end %>
   </div>
   <div class="bottom text-center">
     New here ? <%= link_to 'Sign Up', main_app.new_user_path %>
   </div>
  </div>

