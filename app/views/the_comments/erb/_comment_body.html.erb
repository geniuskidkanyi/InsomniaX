<table class="comment_body table table-striped table-hover">
  <tr>
    <td style="width: 120px;">
      <b>
        <%= comment.commentable_type %>
      </b>
      &rarr;
    </td>
    <td>
      <%= link_to comment.commentable_title, comment.commentable_url %>
      (#{comment.try(:commentable_state)})
    </td>
  </tr>
  <tr>
    <td>
      <b>
        <%= t('the_comments.title') %>
      </b>
    </td>
    <td>
      <%= comment.title.blank? ? t('the_comments.guest_name') : comment.title %>
    </td>
  </tr>
  <tr>
    <td>
      <b>
        <%= t('the_comments.contacts') %>
      </b>
    </td>
    <td>
      <%= comment.contacts %>
    </td>
  </tr>
  <tr class="success">
    <td>
      <b>
        <%= t('the_comments.content') %>
      </b>
    </td>
    <td>
      <%= comment.content %>
    </td>
  </tr>
</table>
