
<% if user_signed_in? %>
<% provide(:title,   "insomniax") %>
<section class="micropost_form">
  <%= render 'shared/micropost_form' %>
</section>
<%= render 'shared/feed' %>

<% else %>
<% provide(:title, "Welcome login signup ") %>
<div class="login-page">

  <div class="login">
    <div class="row">
      <div class="col sm12 m3 l3">
        <h3 class="white-h1 ">Super charge your skills with expert authored tech and creative training with insomniax(Atus sec)</h3>

      </div>
      <div class="col sm12 m8 l8 ">
        <div class="white-h1">
          <h4>Create A New Account</h4>
          <h5>Its Free Now And For Always</h5>
          <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}, class: 'form', id: 'login-nav') do |f| %>
          <div class="input-field">
            <%= f.label :name, class: 'active' %>
            <%= f.text_field :name %>
          </div>
          <div class="input-field">
            <%= f.label :username, class: 'active' %>
            <%= f.text_field :username %>
          </div>
          <div class="input-field">
            <%= f.label :email, class: 'active' %>
            <%= f.email_field :email%>

          </div>
          <div class="input-field">
            <%= f.label :password, class: 'active' %>
            <%= f.password_field :password  %>
          </div>
          <div class="input-field">
            <%= f.label :password_confirmation, "Confirmation", class: 'active' %>
            <%= f.password_field :password_confirmation, class: 'form-control'  %>
          </div>

          <%= f.submit 'Sign Up', class:'waves-effect waves-light btn' %>

          <% end %>
        </div>

      </div>

    </div>

  </div>

</div>

<% end %>

