

<% provide(:title, "Home") %>
<% if logged_in? %>



        <section class="micropost_form">
            <%= render 'shared/micropost_form' %>
        </section>
<h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>


<% else %>
<div class="login-page">

        <div class="login">
        <div class="row">
                <div class="col sm12 m3 l3">
                    <h1 class="white-h1 ">Super charge your skills with expert authored tech and creative training with insomniax(Atus sec)</h1>

                </div>
                <div class="col sm12 m8 l8 ">
                    <div class="white-h1">
                        <h3>Create A New Account</h3>
                        <h5>Its Free Now And For Always</h5>
                         <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}, class: 'form', id: 'login-nav') do |f| %>
                         <div class="input-field">
                             <%= f.label :name, class: 'active' %>
                             <%= f.text_field :name, class: 'form-control'   %>
                         </div>
                         <div class="input-field">
                             <%= f.label :email, class: 'active' %>
                             <%= f.email_field :email, class: 'form-control' %>

                         </div>
                         <div class="input-field">
                             <%= f.label :password, class: 'active' %>
                             <%= f.password_field :password, class: 'form-control'  %>
                         </div>
                         <div class="input-field">
                             <%= f.label :password_confirmation, "Confirmation", class: 'active' %>
                             <%= f.password_field :password_confirmation, class: 'form-control'  %>
                         </div>

                         <%= f.submit 'Sign Up', class:'waves-effect waves-light btn' %>

                         <% end %>
                    </div>

                </div>

            </div>

        </div>

</div>


<% end %>

<style media="screen">
function hideDropdown() {
// Check for simultaneous focus and click events.
isFocused = false;
activates.fadeOut(options.outDuration);
activates.removeClass('none');
origin.removeClass('none');
setTimeout(function() { activates.css('max-height', ''); }, options.outDuration);
}
</style>
