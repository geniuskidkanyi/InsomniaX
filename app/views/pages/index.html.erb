<% provide(:title, "Home") %>
<% if logged_in? %>
<div class="row">
    <aside class="col-lg-4 col-sm-4 col-xs-12">
        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
        <section class="micropost_form">
            <%= render 'shared/micropost_form' %>
        </section>
    </aside>
    <div class="col-lg-8 col-sm-8 col-xs-12">
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
    </div>
</div>
<% else %>
<div class="main_page">h1</div>
<% end %>
