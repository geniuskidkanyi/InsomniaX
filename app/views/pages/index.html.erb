<% provide(:title, "Home") %>
<% if logged_in? %>

        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>

        <section class="micropost_form">
            <%= render 'shared/micropost_form' %>
        </section>

        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>


<% else %>
<div class="main_page hero">
    <div class="row">
        <div class="col-lg-8 col-sm-8 col-xs-12 text-left">
            <h1 class="white-h1 btn-primary">Super charge your skills with expert authored tech and creative training with insomniax(Atus sec)</h1>

        </div>
        <div class="col-lg-3 col-sm-3 col-xs-12 sign_up">
           <h2>Create A New Account</h2>
           <h3>Its Free Now And For Always</h3>
            <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}, class: 'form', id: 'login-nav') do |f| %>
            <div class="form-group">
               <%= f.label :name, class: 'sr-only' %>
                <%= f.text_field :name, class: 'form-control', placeholder: 'Name'  %>
            </div>
            <div class="form-group">
                <%= f.label :email, class: 'sr-only' %>
                <%= f.email_field :email, class: 'form-control',placeholder: 'Enter Email' %>

            </div>
            <div class="form-group">
                <%= f.label :password, class: 'sr-only' %>
                <%= f.password_field :password, class: 'form-control',placeholder: 'Enter Password'  %>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, "Confirmation", class: 'sr-only' %>
                <%= f.password_field :password_confirmation, class: 'form-control',placeholder: 'Confirm Password'  %>
            </div>

            <%= f.submit 'Sign Up', class:'btn btn-primary btn-block' %>

            <% end %>
        </div>

    </div>


</div>
<% end %>
