<% provide(:title, "Home") %>
<% if logged_in? %>

        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>

        <section class="micropost_form">
            <%= render 'shared/micropost_form' %>
        </section>

        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>


<% else %>
<div class="main_page">
    <div class="row">
        <div class="col-lg-4 col-sm-4 col-xs-12 sign_up">
           <h2>Create A New Account</h2>
           <h3>Its Free And Always Shall It Be</h3>
            <%= form_for(:session, url: main_app.signup_path, class: 'form', id: 'login-nav') do |f| %>
            <div class="form-group">
               <%= f.label :name, class: 'sr-only' %>
                <%= f.text_field :name, class: 'form-control', placeholder: 'Name'  %>
            </div>
            <div class="form-group">
                <%= f.label :email, class: 'sr-only' %>
                <%= f.email_field :email, class: 'form-control',placeholder: 'Enter Email' %>

            </div>
            <div class="form-group">
                <%= f.label :password, class: 'sr-only' %>
                <%= f.password_field :password, class: 'form-control',placeholder: 'Enter Password'  %>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, "Confirmation", class: 'sr-only' %>
                <%= f.password_field :password_confirmation, class: 'form-control',placeholder: 'Confirm Password'  %>
            </div>
            <div class="checkbox">
                <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>Remember me on this computer</span>
            </div>
            <% end %>
            <%= f.submit 'Sign Up', class:'btn btn-primary btn-block' %>

            <% end %>
        </div>
        <div class="col-lg-7 col-sm-7 col-xs-12 text-left">
            <h1>some random cool text</h1>
            <h1>some random cool text</h1>
            <h1>some random cool text</h1>
            <h1>some random cool text</h1>
        </div>
    </div>


</div>
<% end %>
