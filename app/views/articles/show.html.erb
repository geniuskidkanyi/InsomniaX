<% provide(:title,  @article.title ) %>

<style media="screen">
  .collection .collection-item.avatar img{width: 100%;}
</style>
<!-- Blog Post Content Column -->
<% if user_signed_in? %>
<div class="col s12">

      <div class="card-panel">

        <div class="article-preview" style="background: linear-gradient(to bottom, rgba(42,19,59,0.8) ,rgba(42,19,59,0.8) ), url(<%= @article.picture_article.url if @article.picture_article? %>) no-repeat;">
<div class="article-wrap">
  <h3 class="text-centre"><%= @article.title %></h3>

<!-- Date/Time -->
  <span class="glyphicon glyphicon-time"></span> Posted on <%= time_ago_in_words(@article.created_at) %> ago
      <span class="glyphicon glyphicon-time"> </span></p>

</div>

      <!-- Preview Image -->



          </div>


          <!-- Post Content -->
          <div class="post-body">
             <%= raw @article.body %>
          </div>
<%= social_share_button_tag(@article.title) %>
          <hr>
<a href="https://hashflare.io/r/2DB5312D"><img src="https://cdn.hashflare.eu/banners/en/728x90_5.gif?v=2" alt="HashFlare"></a>

      <div><%= render @article.tags %></div>
          <div><%= link_to 'Back to Blog', articles_path %></div>
      <% if current_user && current_user.admin? %>
      <div><%= link_to 'Edit', edit_article_path(@article) %> |
          <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <% end %>


      </div>

<% else %>
<div class="col s12">
  <div class="row">
    <div class="col s12 m9 l9">
      <div class="card-panel">


        <div class="article-preview" style="background: linear-gradient(to bottom, rgba(42,19,59,0.8) ,rgba(42,19,59,0.8) ), url(<%= @article.picture_article.url if @article.picture_article? %>) no-repeat;">
<div class="article-wrap">
  <h3 class="text-centre"><%= @article.title %></h3>

<!-- Date/Time -->
  <span class="glyphicon glyphicon-time"></span> Posted on <%= time_ago_in_words(@article.created_at) %> ago
      <span class="glyphicon glyphicon-time"> </span></p>

</div>

      <!-- Preview Image -->



          </div>


          <!-- Post Content -->
          <div class="post-body">
             <%= raw @article.body %>
          </div>
 <%= social_share_button_tag(@article.title) %>
          <hr>


      <div><%= render @article.tags %></div>
          <div><%= link_to 'Back to Blog', articles_path %></div>
      <% if current_user && current_user.admin? %>
      <div><%= link_to 'Edit', edit_article_path(@article) %> |
          <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <% end %>

      </div>
    </div>
    <div class="col s12 m3 l3">




        <ul class="collection">
          <li class="collection-header"><h4>Recent Articles</h4></li>
          <% @articles.each do |article| %>

          <li class="collection-item avatar grey lighten-5 z-depth-1">
            <%= link_to article , article_path(article ), class: "circle"%>
            <span class="title"><%= link_to article.title, article %></span>
            <p>  <%= raw truncate_html(article.body, length: 190) %>
            </p>
              <%= link_to "read more", article %></p>

          </li>

      <% end %>
    </ul>
  </div>
      </div>
<% end %>


<% if user_signed_in? %>
<div id="comments">

    <%= render partial: "comments/template", locals: {commentable: @article, new_comment: @comment} %>


</div>
<% else %>

 <!-- <h4>Login</h4> -->
<div class="row">
  <div class="card login-form">


                <h1>Login</h1>

                <%= form_for(:user, :url => session_path(:user)) do |f| %>
                <div class="input-fieldp">
                  <%= f.label :email, class: 'active' %>
                  <%= f.email_field :email, placeholder: 'Email address', class:'form-control' %>
                </div>
                <div class="input-field">
                  <%= f.label :password, class: 'active' %>
                  <%= f.password_field :password, placeholder: 'Enter Password', class: 'form-control' %>

                  <div class="help-block text-right"><%= link_to "(forgot password)", new_password_reset_path %></div>
                </div>
                <div class="checkbox">
                  <%= f.label :remember_me, class: "filled-in", id: "filled-in-box", checked: "checked" do %>
                  <%= f.check_box :remember_me %>
                  <span>Remember me on this computer</span>
                </div>
                <% end %>


              <div class="card-action">
                <%= f.submit 'Sign In', class:'waves-effect waves-light btn' %>
                <p>New user?
                  <%= link_to "Sign up now!", user_registration_path %></p>


              </div>
                <% end %>
    </div>

</div>

<% end %>

</div>
