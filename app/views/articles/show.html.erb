
<h1 class="title">
    <%= @article.title %>
</h1>


<p class="date">
    Submitted <%= time_ago_in_words(@article.created_at) %> Ago
</p>


<p class="body">
    <%= @article.body %>
</p>
<div><%= render @article.tags %></div>
<div id="comments">
    <h2><%= @article.comments.count %> Comments</h2>
    <%= render @article.comments %>

<h3>Add a comment:</h3>
<%= render "comments/form" %>
</div>
