<h1>New Post</h1>

<%= form_for :article, url: articles_path do |f| %>
<% if @article.errors.any? %>
<div id="errors">
    <h2><%= pluralize(@article.errors.count, "error") %> prevented this post from saving:</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<br>
<%= f.label :body %><br>
<%= f.text_field :body %><br>
<br>
<%= f.submit %>
<% end %>
