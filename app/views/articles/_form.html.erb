<% if current_user && current_user.admin? %>
<% provide(:title, "edit Blog") %>
<h1>New Post</h1>

<%= form_for @article, html: { multipart: true } do |f| %>
<span class="picture">
    <%= f.file_field :picture_article %>
</span>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<br>
<%= f.label :body %><br>
<%= f.cktext_area :body, :ckeditor => {:toolbar => 'mini'} %>

<br>
<%= f.text_field :tag_list %>
<%= f.submit %>
<% end %>
<% else %>
<h2>You dont have enough privileges</h2>
<% end %>
