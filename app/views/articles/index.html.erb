<% provide(:title, "Blog") %>
    <div class="row">
        <h4 class="text-center">BLOGS </h4>
        <hr/>
    </div>

    <%= will_paginate  renderer: BootstrapPagination::Rails%>
   <div class="row">
<% @articles.each do |article| %>


        <div class="col s6 m4">
            <div class="card small">
                <div class="label label-info blue darken-3">

                    <span data-toggle="tooltip" title="viewed">
                        <b class="glyphicon glyphicon-sunglasses"></b> </span>
                    <span data-toggle="tooltip" title="created"><%= article.created_at.strftime("%B %d, %Y") %></span>
                </div>
                        <div class="card-image image-card">

                     <%= link_to (image_tag article.picture_article.url), article_path(article) %>
                        </div>

                        <div class="card-action">
                          <%= link_to article.title, article, class: "btn light-blue darken-4 ", role: "button" %>

                        </div>
                      </div>
        </div>
<% end %>
</div>
<%= will_paginate renderer: BootstrapPagination::Rails %>
