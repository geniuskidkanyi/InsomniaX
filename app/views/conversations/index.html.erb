<% provide(:title, 'Your Conversations') %>

<div class="row">

    <div class="col s12 m4 l3">
        <ul class="collection">
            <%= link_to ' new conversation', new_message_path, class: 'collection-item btn light-blue accent-4' %>
            <%= mailbox_section 'inbox', @box, class: 'collection-item' %>
            <%= mailbox_section 'sent', @box, class: 'collection-item' %>
            <%= mailbox_section 'trash', @box, class: 'collection-item' %>
        </ul>
    </div>

    <div class="col s12 m8 l9">

        <% if @box == 'trash' %>
        <p><%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn red darken-4', method: :delete,
data: {confirm: 'Are you sure?'} %></p>
        <% end %>
        <ul class="list-group">
            <%= render partial: 'conversations/conversation', collection: @conversations %>
        </ul>

        <%= will_paginate %>
    </div>
</div>
