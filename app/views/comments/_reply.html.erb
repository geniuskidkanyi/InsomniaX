<% comments.each do |comment| %>
<div class="comments-show">
  <div class="comment">
    <p class="comment_name">
      <strong><%= comment.user.name %></strong>
    </p>

    <p><%= comment.body %><br></p>
    <p class="comment_time"><%= time_ago_in_words(comment.created_at) %>
      Ago</p>

    <div class="comment-nav">
      <div class="stats">
        <%= link_to "Upvote", {:controller =>"comments", :action => "upvote", :id => comment.id}, :class => 'btn', method: :put %>
        <%= comment.get_downvotes.size %>
        <%= link_to "Downvote", {:controller =>"comments", :action => "downvote", :id => comment.id}, :class => 'btn', method: :put %>

      </div>
      <a href="#" class="comment-reply">reply</a>
    </div>
    <div class="reply-form">
      <%= form_for @new_comment do |f| %>
      <%= f.hidden_field :commentable_id, value: @new_comment.commentable_id %>
      <%= f.hidden_field :commentable_type, value: @new_comment.commentable_type %>
      <%= f.hidden_field :comment_id, value: comment.id %>
      <div class="field form-group">
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= submit_tag "Post Reply", class: 'btn light-blue darken-4' %>
      </div>
      <% end %>
    </div>
  </div>
  <%= render partial: "comments/reply", locals: {comments: comment.children} %>
</div>
<% end %>
