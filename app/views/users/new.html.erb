<div class="container">
  <% provide(:title, 'sign up') %>
  <h1>sign up</h1>
  <%= form_for(@user, class:"form" ) do |f|%>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="input-field">
    <%= f.label :name, class: 'active'  %>
    <%= f.text_field :name, class: 'form-control'   %>
  </div>
  <div class="input-field">
    <%= f.label :username, class: 'active' %>
    <%= f.text_field :username, class: 'form-control' %>
  </div>
  <div class="input-field">
    <%= f.label :email, class: 'active' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="input-field">
    <%= f.label :password, class: 'active' %>
    <%= f.password_field :password, class: 'form-control'  %>
  </div>
  <div class="input-field">
    <%= f.label :password_confirmation, "Confirmation", class: 'active' %>
    <%= f.password_field :password_confirmation, class: 'form-control'  %>
  </div>

  <%= f.submit 'Sign Up', class:'waves-effect waves-light btn' %>
  <% end %>

</div>
