<% provide(:title, 'sign up') %>
<h1>sign up</h1>
<%= form_for(@user, class:"form" ) do |f|%>
<%= render 'shared/error_messages', object: f.object %>
<div class="form-group">
    <%= f.label :name, class: 'active' %>
  <%= f.text_field :name, class: 'form-control'  %>
</div>
<div class="form-group">
    <%= f.label :email, class: 'active' %>
  <%= f.email_field :email, class: 'form-control' %>
</div>
<div class="form-group">
    <%= f.label :username, class: 'active' %>
  <%= f.text_field :username, class: 'form-control' %>
</div>
<div class="form-group">
    <%= f.label :password, class: 'active' %>
  <%= f.password_field :password, class: 'form-control'  %>
</div>
<div class="form-group">
    <%= f.label :password_confirmation, "Confirmation", class: 'active' %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.submit "Create my account", class: "waves-effect waves-light btn" %>
</div>
<% end %>

