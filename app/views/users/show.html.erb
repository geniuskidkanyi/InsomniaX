<% provide(:title, @user.name) %>
<%= render 'shared/profile' %>

<div class="row">

<% if @user.microposts.any? %>
<div class="col s12 m9 l9"><h3>Microposts (<%= @user.microposts.count %>)</h3>
  <ol class="microposts">
   <%= render @microposts %>
  </ol>
  <%= will_paginate @microposts %>
</div>
<% end %>
</div>
