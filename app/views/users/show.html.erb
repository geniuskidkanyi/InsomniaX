<% provide(:title, @user.name) %>
<%= @user.name %>,
<%= @user.email %>,
<%= @user.username %>
<h1>
 <%= gravatar_for @user %>
 <%= @user.name %>
</h1>
<section class="stats">
    <%= render 'shared/stats' %>
</section>
<%= render 'follow_form' if logged_in? %>

<% if @user.microposts.any? %>
<h3>Microposts (<%= @user.microposts.count %>)</h3>
<ol class="microposts">
    <%= render @microposts %>
</ol>
<%= will_paginate @microposts %>
<% end %>
