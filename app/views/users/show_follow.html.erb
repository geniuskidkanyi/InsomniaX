<% provide(:title, @title) %>
<div class="row">
    <aside class="col-lg-4 ">
        <section class="user_info">
            <%= gravatar_followed_user @user %>
            <h1><%= @user.name %></h1>
            <span><%= link_to "view my profile", @user %></span>
            <span><b>Microposts:</b> <%= @user.microposts.count %></span>
            <section class="stats"><%= render 'shared/stats' %></section>
        </section>

    </aside>
    <div class="col-lg-7 ">
        <h3><%= @title %></h3>
        <section class="stats">

            <% if @users.any? %>
            <div class="user_avatars">
                <% @users.each do |user| %>
                <%= link_to gravatar_follow(user, size: 30), user %>

                <% end %>
            </div>
            <%= will_paginate %>
            <% end %>
        </section>


    </div>
</div>
