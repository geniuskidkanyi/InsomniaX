<% provide(:title, @title) %>
  <%= render 'shared/profile' %>

<div class="row">
     <div class="col s12 ">
        <h3><%= @title %></h3>
        <section class="stats">

            <% if @users.any? %>
            <div class="user_avatars">
                 <div class="row">

                <% @users.each do |user| %>
               <div class="col s6 m3 l3">
                         <%= link_to gravatar_follow(user, size: 80), user %>
                          <br>
                <%= link_to user.name, user %>
                 </div>
                <% end %>

                </div>

            </div>
            <%= will_paginate %>
            <% end %>
        </section>


    </div>
</div>
