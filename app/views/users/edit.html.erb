<% provide(:title, "Edit user") %>
<h3>Update your profile</h3>


<% provide(:title, "Log in") %>

<div class="card registration-form">
  <div class="loginTitle">
  <h2>Edit account </h2>
</div>


  <%= form_for(@user, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="col m6">
    <div class="input-field">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="col m6">
    <div class="input-field">
      <%= f.label :username, class: 'form-control' %>
      <%= f.text_field :username, class: 'form-control' %>
    </div>
  </div>
  <div class="col m12">
    <div class="input-field">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class="col m12">

    <div class="input-field">
      <%= f.label :description, class: 'form-control' %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>
  <div class="col m6">
    <div class="picture">
      <div class="file-field input-field">
        <div class="btn">
          <span>File</span>
          <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" placeholder="Upload profile picture">
        </div>
      </div>
      <%= image_tag @user.avatar.url if @user.avatar? %>
    </div>
  </div>
  <div class="col m6">
    <div class="picture">
      <div class="file-field input-field">
        <div class="btn">
          <span>File</span>
          <%= f.file_field :dprofile, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" placeholder="upload cover photo">
        </div>
      </div>
      <%= image_tag @user.dprofile.url if @user.dprofile? %>
    </div>
  </div>
  <div class="col m6">
    <%= f.check_box :is_female, {}, true %>
    <%= f.label :is_female, "Female" %>
    <%= f.check_box :is_female, {}, false %>
    <%= f.label :is_female, "Male" %>
  </div>

  <div class="col m6">
    <%= f.label :birthdate, "Age"%>
    <br>
    <%= f.date_field :birthdate, class: "datepicker" %>
    <br>

  </div>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="col m12">
    <%= f.submit "Save changes", class: "waves-effect waves-light btn" %>
  </div>

  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
