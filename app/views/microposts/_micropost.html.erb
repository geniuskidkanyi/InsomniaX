<div class="row">
<ul class="collection">
    <li class="collection-item avatar">
      <%= link_to gravatar_post(micropost.user, size: 50), micropost.user %>
      <span class="title"><%= link_to micropost.user.name, micropost.user %>
      made a post.</span>
      <span class="title"><%= time_ago_in_words(micropost.created_at) %> ago</span>
      <p><%= micropost.content %> <br>
     <%= image_tag micropost.picture.url if micropost.picture? %></p>
      </p>
     
    </li>
     <div class="stats">

     <%= link_to like_micropost_path(micropost), method: :get, class: "btn btn-default stat-item " do %>
     <span class="fa fa-thumbs-up icon"></span><%= micropost.get_upvotes.size %>
     Upvote

     <% end %>

     <%= link_to dislike_micropost_path(micropost), method: :get, class: "btn btn-default stat-item" do %>
     <span class="fa fa-thumbs-down icon"></span><%= micropost.get_downvotes.size %>
     downvote

     <% end %>

    </div>
   
</ul>

 
</div>



