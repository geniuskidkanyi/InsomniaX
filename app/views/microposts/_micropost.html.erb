<div class="row">


 <div class="col-sm-8">
  <div class="panel panel-white post panel-shadow">
   <div class="post-heading">
    <div class="pull-left image">
     <%= link_to gravatar_post(micropost.user, size: 50), micropost.user %>
    </div>
    <div class="pull-left meta">
     <div class="title h5">
      <%= link_to micropost.user.name, micropost.user %>
      made a post.
     </div>
     <h6 class="text-muted time"><%= time_ago_in_words(micropost.created_at) %> ago</h6>
    </div>
   </div>
   <div class="post-description">
    <p><%= micropost.content %> <br>
     <%= image_tag micropost.picture.url if micropost.picture? %></p>
    <div class="stats">
     <a href="#" class="btn btn-default stat-item">
      <i class="fa fa-thumbs-up icon"></i> <%= micropost.get_upvotes.size %>
     </a>
     <a href="#" class="btn btn-default stat-item">
      <i class="fa fa-thumbs-down icon"></i><%= micropost.get_downvotes.size %>
     </a>
     <%= link_to "Upvote", like_micropost_path(micropost), method: :get %>
     <%= link_to "Downvote", dislike_micropost_path(micropost), method: :get %>


    </div>
   </div>
   <div class="post-footer">
    </div>
  </div>
 </div>
</div>



